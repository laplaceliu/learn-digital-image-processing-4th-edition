{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake",
            "type": "shell",
            "command": "cmake",
            "args": ["-DCMAKE_EXPORT_COMPILE_COMMANDS=ON", ".."],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "args": ["-j4"],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Configure CMake"]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build All",
            "dependsOn": ["Clean", "Configure CMake", "Build"],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}